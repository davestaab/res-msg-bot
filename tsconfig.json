{
  "compilerOptions": {
    "module": "node16",
		"moduleResolution": "node16",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "netlify/**/*.ts",
    "features/**/*.ts",
    ".eslintrc.cjs",
    "cucumber.cjs"
  ]
}
